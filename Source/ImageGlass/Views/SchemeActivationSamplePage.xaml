<Page
    x:Class="ImageGlass.Views.SchemeActivationSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ActivationParameterDateTemplate">
            <TextBlock
                Text="{Binding}"
                Style="{StaticResource BodyTextStyle}" />
        </DataTemplate>
    </Page.Resources>
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            x:Uid="SchemeActivationSamplePage_Title"
            Style="{StaticResource PageTitleStyle}" />
        <TextBlock
            Grid.Row="1"
            x:Uid="SchemeActivationSamplePage_Description"
            Style="{StaticResource BodyTextStyle}" />
        <ScrollViewer Grid.Row="2" Margin="{StaticResource SmallTopBottomMargin}">
            <ItemsControl
                ItemsSource="{x:Bind ViewModel.Parameters}"
                ItemTemplate="{StaticResource ActivationParameterDateTemplate}" />
        </ScrollViewer>
    </Grid>
</Page>
